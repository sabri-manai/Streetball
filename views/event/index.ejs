<%  if (user) { %>
<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<%- include('../partials/flashMessages') -%>
<div class=" bg-dark " mr-1 ml-1 >
<% if (user.role==='author' )  { %> 
<% chunk.forEach((events)=>   { %>
  <div class="row mt-3">
      <% events.forEach((event)=> {%>
      <% if ( (user.id == event.user_id) && (user.bookingDate.toDateString() === event.date.toDateString() ))   {%>
        <div class="col-sm-6 col-md-4">
            <div class="card">              
                <div class="card-body">
                  <h5 class="card-title"><%= event.title%>(<%= event.date.toDateString()%>) </h5>
                  <p class="card-text"><%= event.description%><%= event.booking%>!</p>
                  <p><%= event.location%></p>
                  <a href="<%=  '/events/show/'  + event.id %>" class="btn btn-primary">Show More <i class="fa fa-info-circle"></i></a>
                <a href="<%= '/events/sedit/' + event.id %>" class="btn btn-primary">Edit</a>
                    <button class="btn btn-danger" onclick="deleteEvent()" id="deleteBtn" data-id="<%= event.id%>">Delete</button>
                <%}%>
                </div>
              </div>

        </div>
        <%})%>
  </div>

<%})%>
<div class="row">
<div class="col-12 mt-2 mb-4">
  <nav aria-label="...">
    <ul class="pagination pagination-lg justify-content-center">
      <% for (let i=1 ; i <= Math.ceil(total/5); i++) {%>
        <% if (pageNo == i) {%>
        <li class="page-item active"><a class="page-link" href="<%= '/events/' + i%>"><%= i%></a></li>
        <%} else { %>
        <li class="page-item"><a class="page-link" href="<%= '/events/' + i%>"><%= i%></a></li>
        <%}%>
      <%}%>
     

    </ul>
  </nav>
</div>
</div>
<% } else if (user.role==='member'){ %>
    <br>
    <h1><p class=" bg-dark text-white text-center w3-xxlarge ">New events!</p></h1>
    <div class="row mt-3">
  <div class="col md-12">
  </div>          
      </div>
    <% chunk.forEach((events)=> {%>
      <div class="row mt-3">
          <% events.forEach((event)=> {%>
            <div class="col-sm-6 col-md-4">
                <div class="card">
                    <div class="card-body">
                      <h5 class="card-title"><%= event.title%></h5>
                      <p class="card-text"><%= event.description%></p>
                      <p><%= event.location%></p>
                      <a href="<%=  '/events/show/'  + event.id %>" class="btn btn-primary">Show More <i class="fa fa-info-circle"></i>                    </a>
                      <% if ((user) && (user.id == event.user_id ) && (user.role==='member')) {%>
                        <a href="<%= '/events/edit/' + event.id %>" class="btn btn-primary">Edit</a>
                        <button class="btn btn-danger" onclick="deleteEvent()" id="deleteBtn" data-id="<%= event.id%>">Delete</button>
                        <%}%>
  
                    </div>
                  </div>
            </div>
            <%})%>
      </div>
  
    <%})%>
  <div class="row">
    <div class="col-12 mt-2 mb-4">
      <nav aria-label="...">
        <ul class="pagination pagination-lg justify-content-center">
          <% for (let i=1 ; i <= Math.ceil(total/5); i++) {%>
          
            <% if (pageNo == i) {%>
              <li class="page-item active"><a class="page-link" href="<%= '/events/' + i%>"><%= i%></a></li>
            <%} else { %>
            <li class="page-item"><a class="page-link" href="<%= '/events/' + i%>"><%= i%></a></li>
            <%}%>
          
          <%}%>
          
        </ul>
      </nav>
    </div>
  </div>
  
  <hr>
  <% }%>
  <%- include('../partials/footer') -%>
  <%- include('../partials/contact') -%>
</div>
<% } else { %>
  <%- include('../partials/header') -%>
  <%- include('../partials/navbar') -%>  
  <%- include('../partials/carrousel') -%>
  <%- include('../partials/footer') -%>
  <%- include('../partials/contact') -%>

<% }%>

