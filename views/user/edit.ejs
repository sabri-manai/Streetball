<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<%- include('../partials/flashMessages') -%>     
<div class="container">
    <div class="row mt-4">
        <div class="col-md-3">
            <img src="<%= '/images/' + user.avatar%>" height="150px" class="avatar" width="150px">
            
        </div>
        <style>
            .avatar{
                border-radius: 50%
            }
        </style>
        <div class="col-md-9">
            <form action="/users/uploadAvatar" method="POST" enctype="multipart/form-data">
                <input type="file" name="avatar" id="avatar" onchange="readURL(this)">
                
            <hr>
            <h5 class="display-6">Image Preivew</h5>
            <img src="#" alt="" id="imagePlaceholder" class="avatar" height="200px" width="200px" style="display: none;">
            <br>
            <button type="submit" class="btn btn-primary">Upload</button>
            
        </form>
                <h1 class="display-4">Update profile </h1>
                <hr>
                <form  action="/users/edit" method="post">
                    <div class="form-group">
                        <label for="mobile">Mobile</label>
                        <input type="text" name="mobile" id="mobile" class="form-control" value="<%= user.mobile%>" >
                    </div>
                    
    
                        <div class="form-group">
                            <label for="playerPos">Choose your post:</label>

                            <select name="playerPos" id="playerPos" value="<%= user.playerPos%>">
                              <option value="Goolkeeper">Goolkeeper</option>
                              <option value="Defensive">Defensive</option>
                              <option value="midfield">Midfield</option>
                              <option value="offensive">Offensive</option>
                            </select> 
                            </div>
    
                            <div class="form-group">
                                    <label for="location">Location</label>
                                    <input type="text" name="location" id="location" class="form-control" value="<%= user.location %>">
                                </div>
                           <div class="form-group">
                            <button type="submit" class="btn btn-primary"> Update</button>
                        </div>
                </form>    
        </div>
    </div>
</div>
<%- include('../partials/footer') -%>