<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i>Stadium register
        </h1>
            <hr>
       
            <%- include('../partials/flashMessages') -%>     
            
            <form  action="/users/signup" method="post">
             
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control">
                </div>

                <div class="form-group">
                    <label for="confirm_password">Confirm Password</label>
                    <input type="password" name="confirm_password" id="confirm_password" class="form-control">
                </div>

                <div class="form-group">
                    <label for="UserName">Stadium name</label>
                    <input type="text" name="firstName" id="firstName" class="form-control">
                </div>

                <div class="form-group">
                    <label for="UserName">Owner Full name</label>
                    <input type="text" name="lastName" id="lastName" class="form-control">
                </div>
                <div class="form-group">
                    <label for="location">Stadium address</label>
                    <input type="text" name="location" id="location" class="form-control">
                </div>
                <div class="form-group">
                    <label for="mobile">Mobile</label>
                    <input type="text" name="mobile" id="mobile" class="form-control">
                </div>
                <div class="form-group">
                    <label for="mobile">Price (Person/Game ) </label>
                    <input type="text" name="cost" id="cost" class="form-control">
                </div>
                <div class="form-group">
                    <input type="hidden" name="role" id="role" value="author" class="form-control">
                </div>   
            
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"> Create</button>
                    </div>
        
            </form>
            <p class="lead mt-4">Footballer ? <a href="/users/signup">Signup </a></p>
            <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
            
        </div>
    </div>
</div>

    
<%- include('../partials/footer') -%>